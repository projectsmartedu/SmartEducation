{
  "version": 2,
  "builds": [
    { "src": "backend/serverless.js", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/serverless.js" },
    { "source": "/(.*)", "destination": "/frontend/index.html" }
  ]
}
